{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2018",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist/",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "es2018",
            "webworker",
            "dom"
        ]
    },
    "include": [
        "src/**/*",
        "customTypings/**/*",
        "typings/**/*"
    ]
}